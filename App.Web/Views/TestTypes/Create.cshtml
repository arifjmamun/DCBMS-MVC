@model App.Core.Models.EntityModels.TestType

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Test Types</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Create", "TestTypes")">Home</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Create", "TestTypes")">Test Types</a>
            </li>
            <li class="active">
                <strong><a href="@Url.Action("Create", "TestTypes")">Create</a></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="addController">
    <div class="row">
        <div class="col-lg-7">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Test Types</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th width="50">SL#</th>
                                    <th>@Html.DisplayNameFor(m=>m.TestTypeName)</th>
                                    <th width="180">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="testType in testTypes">
                                    <td>{{$index+1}}</td>
                                    <td>{{testType.TestTypeName}}</td>
                                    <td>
                                        <a href="@Url.Action("Details","TestTypes")" class="btn btn-xs btn-info">Details</a>
                                        <a href="/TestTpes/Edit/{{testType.TestTypeId}}" class="btn btn-xs btn-default">Edit</a>
                                        <button href="/TestTpes/Edit/{{testType.TestTypeId}}" class="btn btn-xs btn-danger" ng-click="confirmDelete(this)">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Add Test Type</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" ng-submit="submit()" name="addTestTypeForm">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.TestTypeName, htmlAttributes: new { @class = "control-label col-lg-4" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.TestTypeName,new { @class = "form-control", @ng_model= "testType.TestTypeName" } )
                                <span class="help-block m-b-none text-danger">@Html.ValidationMessageFor(model => model.TestTypeName)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-4 col-lg-6">
                                <input type="submit" value="Add" class="btn btn-sm btn-white" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/iCheck")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });
        });
    </script>
}

@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}