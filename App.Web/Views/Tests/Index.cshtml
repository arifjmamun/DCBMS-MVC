@model App.Core.Models.EntityModels.Test

@{
    ViewBag.Title = "Tests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tests</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "TestTypes")">Home</a>
            </li>
            <li class="active">
                <a href="@Url.Action("Index", "Tests")">Tests</a>
            </li>
            <li class="active">
                <strong><a href="@Url.Action("Index", "Tests")">Add New</a></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="testController">
    <div class="row">
        <div class="col-lg-7">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Test Types</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th width="50">SL#</th>
                                    <th>@Html.DisplayNameFor(m => m.TestName)</th>
                                    <th>@Html.DisplayNameFor(m => m.Fee)</th>
                                    <th>@Html.DisplayNameFor(m => m.TestTypeId)</th>
                                    <th width="180">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="test in tests">
                                    <td>{{$index+1}}</td>
                                    <td>{{test.TestName}}</td>
                                    <td>{{test.Fee}}</td>
                                    <td>{{test.TestTypeId}}</td>
                                    <td>
                                        <a href="@Url.Action("Index", "Tests")" class="btn btn-xs btn-info">Details</a>
                                        <button class="btn btn-xs btn-default" ng-click="editTest(this)" data-toggle="modal" data-target="#editTestModal">Edit</button>
                                        <button class="btn btn-xs btn-danger" ng-click="confirmDelete(this)">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Add Test</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" ng-submit="submit()" name="addTestForm">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.TestName, htmlAttributes: new { @class = "control-label col-lg-4" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.TestName, new { @class = "form-control", @ng_model = "test.TestName" })
                                <span class="help-block m-b-none text-danger">@Html.ValidationMessageFor(model => model.TestName)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Fee, htmlAttributes: new { @class = "control-label col-lg-4" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(model => model.Fee, new { @class = "form-control", @ng_model = "test.Fee" })
                                <span class="help-block m-b-none text-danger">@Html.ValidationMessageFor(model => model.Fee)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TestTypeId, htmlAttributes: new { @class = "control-label col-lg-4" })
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.TestTypeId, Enumerable.Empty<SelectListItem>(), "Select One", new { @class = "form-control", @ng_model = "test.TestTypeId" })
                                <span class="help-block m-b-none text-danger">@Html.ValidationMessageFor(model => model.TestTypeId)</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-4 col-lg-6">
                                <button type="submit" class="btn btn-primary btn-sm dim">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div ng-controller="modalController">
    <div class="modal inmodal" id="editTestModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h3 class="modal-title">Edit | Test Type</h3>
                </div>
                <form method="post" class="form-horizontal" ng-submit="saveChangesTest()">
                    <div class="modal-body">
                        <input type="hidden" ng-model="test.TestId" />
                        <div class="form-group">
                            @Html.LabelFor(m => m.TestName, new { @class = "control-label col-lg-4" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.TestName, new { @class = "form-control", @ng_model = "test.TestName" })
                                <span class="help-block m-b-none text-danger">@Html.ValidationMessageFor(model => model.TestName)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Fee, new { @class = "control-label col-lg-4" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.Fee, new { @class = "form-control", @ng_model = "test.Fee" })
                                <span class="help-block m-b-none text-danger">@Html.ValidationMessageFor(model => model.Fee)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TestTypeId, htmlAttributes: new { @class = "control-label col-lg-4" })
                            <div class="col-lg-6">
                                @Html.DropDownListFor(model => model.TestTypeId, Enumerable.Empty<SelectListItem>(), "Select One", new { @class = "form-control", @ng_model = "test.TestTypeId" })
                                <span class="help-block m-b-none text-danger">@Html.ValidationMessageFor(model => model.TestTypeId)</span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger btn-sm dim" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-sm dim">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
